      <Generator>MSBuild:UpdateDesignTimeXaml</Generator>
    </EmbeddedResource>
    <EmbeddedResource Update="Utilities\LightTheme.xaml">
      <Generator>MSBuild:UpdateDesignTimeXaml</Generator>
