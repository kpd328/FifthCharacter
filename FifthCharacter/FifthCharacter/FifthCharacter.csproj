<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <ProduceReferenceAssembly>true</ProduceReferenceAssembly>
    <LangVersion>8.0</LangVersion>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|AnyCPU'">
    <DebugType>portable</DebugType>
    <DebugSymbols>true</DebugSymbols>
  </PropertyGroup>

  <ItemGroup>
    <Compile Remove="NewCharacter\**" />
    <EmbeddedResource Remove="NewCharacter\**" />
    <None Remove="NewCharacter\**" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Newtonsoft.Json" Version="12.0.3" />
    <PackageReference Include="Rg.Plugins.Popup" Version="1.2.0.223" />
    <PackageReference Include="Xamarin.Forms" Version="4.5.0.396" />
    <PackageReference Include="Xamarin.Essentials" Version="1.5.1" />
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Update="Attacks\Mechanics\Property\WeapPropName.resx">
      <Generator>ResXFileCodeGenerator</Generator>
      <LastGenOutput>WeapPropName.Designer.cs</LastGenOutput>
    </EmbeddedResource>
    <EmbeddedResource Update="Features\Class\Fighter\FeatureFighterText.resx">
      <Generator>ResXFileCodeGenerator</Generator>
      <LastGenOutput>FeatureFighterText.Designer.cs</LastGenOutput>
    </EmbeddedResource>
    <EmbeddedResource Update="Features\Class\Fighter\FightingStyleText.resx">
      <Generator>ResXFileCodeGenerator</Generator>
      <LastGenOutput>FightingStyleText.Designer.cs</LastGenOutput>
    </EmbeddedResource>
    <EmbeddedResource Update="View\AbilityScore.xaml">
      <Generator>MSBuild:UpdateDesignTimeXaml</Generator>
    </EmbeddedResource>
    <EmbeddedResource Update="View\AttacksList.xaml">
      <Generator>MSBuild:UpdateDesignTimeXaml</Generator>
    </EmbeddedResource>
    <EmbeddedResource Update="Attacks\Mechanics\Property\WeapPropTxt.resx">
      <Generator>ResXFileCodeGenerator</Generator>
      <LastGenOutput>WeapPropTxt.Designer.cs</LastGenOutput>
    </EmbeddedResource>
    <EmbeddedResource Update="View\CharacterDefense.xaml">
      <Generator>MSBuild:UpdateDesignTimeXaml</Generator>
