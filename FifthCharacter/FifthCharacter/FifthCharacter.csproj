    <EmbeddedResource Update="Utilities\PlatformFonts\iOSFonts.xaml">
      <Generator>MSBuild:UpdateDesignTimeXaml</Generator>
    </EmbeddedResource>
    <EmbeddedResource Update="View\FeaturesList.xaml">
      <Generator>MSBuild:UpdateDesignTimeXaml</Generator>
    </EmbeddedResource>
    <EmbeddedResource Update="View\Popup\PopupFeature.xaml">
      <Generator>MSBuild:UpdateDesignTimeXaml</Generator>
    </EmbeddedResource>
    <EmbeddedResource Update="View\Popup\PopupFeature_GTK.xaml">
      <Generator>MSBuild:UpdateDesignTimeXaml</Generator>
    </EmbeddedResource>
    <EmbeddedResource Update="View\SpellList.xaml">
      <Generator>MSBuild:UpdateDesignTimeXaml</Generator>
    </EmbeddedResource>
  </ItemGroup>

  <ItemGroup>
    <Compile Update="Attacks\Mechanics\Property\WeapPropName.Designer.cs">
      <DesignTime>True</DesignTime>
      <AutoGen>True</AutoGen>
      <DependentUpon>WeapPropName.resx</DependentUpon>
    </Compile>
    <Compile Update="Attacks\Mechanics\Property\WeapPropTxt.Designer.cs">
      <DesignTime>True</DesignTime>
      <AutoGen>True</AutoGen>
      <DependentUpon>WeapPropTxt.resx</DependentUpon>
    </Compile>
    <Compile Update="Features\Class\Fighter\FeatureFighterText.Designer.cs">
      <DesignTime>True</DesignTime>
      <AutoGen>True</AutoGen>
      <DependentUpon>FeatureFighterText.resx</DependentUpon>
    </Compile>
    <Compile Update="Features\Class\Fighter\FightingStyleText.Designer.cs">
      <DesignTime>True</DesignTime>
      <AutoGen>True</AutoGen>
      <DependentUpon>FightingStyleText.resx</DependentUpon>
    </Compile>
    <Compile Update="Utilities\PlatformFonts\FallbackFonts.xaml.cs">
      <DependentUpon>FallbackFonts.xaml</DependentUpon>
