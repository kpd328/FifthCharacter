                        <ImageButton.Source>
                            <FontImageSource FontFamily="{DynamicResource MaterialIcons}"
                                             Glyph="{DynamicResource ArrowDropUp}"
                                             Size="{DynamicResource SizeIconButton}"/>
                        </ImageButton.Source>
                    </ImageButton>
                    <Label Text="Wisdom"
                           VerticalOptions="Center"
                           HorizontalOptions="End"
                           Grid.Row="6"
                           Grid.Column="0"/>
                    <ImageButton x:Name="RollWisDownButton"
                                 x:FieldModifier="public"
                                 Padding="{DynamicResource IconButtonPadding}"
                                 HorizontalOptions="EndAndExpand"
                                 Grid.Row="6"
                                 Grid.Column="1"
                                 Command="{Binding RollWisChaSwap}">
                        <ImageButton.Source>
                            <FontImageSource FontFamily="{DynamicResource MaterialIcons}"
                                             Glyph="{DynamicResource ArrowDropDown}"
                                             Size="{DynamicResource SizeIconButton}"/>
                        </ImageButton.Source>
                    </ImageButton>
                    <Entry Placeholder="Wisdom Score"
                           Text="{Binding RollWis}"
                           IsEnabled="False"
                           Grid.Row="6"
                           Grid.Column="2"/>
                    <ImageButton x:Name="RollWisUpButton"
                                 x:FieldModifier="public"
                                 Padding="{DynamicResource IconButtonPadding}"
                                 HorizontalOptions="StartAndExpand"
                                 Grid.Row="6"
                                 Grid.Column="3"
                                 Command="{Binding RollIntWisSwap}">
                        <ImageButton.Source>
                            <FontImageSource FontFamily="{DynamicResource MaterialIcons}"
                                             Glyph="{DynamicResource ArrowDropUp}"
                                             Size="{DynamicResource SizeIconButton}"/>
                        </ImageButton.Source>
                    </ImageButton>
                    <Label Text="Charisma"
                           VerticalOptions="Center"
                           HorizontalOptions="End"
                           Grid.Row="7"
                           Grid.Column="0"/>
                    <Entry Placeholder="Charisma Score"
                           Text="{Binding RollCha}"
                           IsEnabled="False"
                           Grid.Row="7"
                           Grid.Column="2"/>
                    <ImageButton x:Name="RollChaUpButton"
                                 x:FieldModifier="public"
                                 Padding="{DynamicResource IconButtonPadding}"
                                 HorizontalOptions="StartAndExpand"
                                 Grid.Row="7"
                                 Grid.Column="3"
                                 Command="{Binding RollWisChaSwap}">
                        <ImageButton.Source>
                            <FontImageSource FontFamily="{DynamicResource MaterialIcons}"
                                             Glyph="{DynamicResource ArrowDropUp}"
                                             Size="{DynamicResource SizeIconButton}"/>
                        </ImageButton.Source>
                    </ImageButton>
                    <Button Text="Roll"
                            HorizontalOptions="CenterAndExpand"
                            Command="{Binding RollButton}"
                            IsEnabled="{Binding CanRoll}"
                            Grid.Row="8"
                            Grid.Column="0"
                            Grid.ColumnSpan="4"/>
                </Grid>
            </Frame>
            <!--Manual Entry-->
            <Frame x:Name="ManualEntry"
                   x:FieldModifier="public"
                   Grid.Row="1"
                   Grid.Column="0"
                   Grid.ColumnSpan="4"
                   IsVisible="False"
                   Margin="0"
                   Padding="0"
                   VerticalOptions="Start">
                <Grid VerticalOptions="Start"
                      Margin="0"
                      Padding="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="2*"/>
                    </Grid.ColumnDefinitions>
                    <Label Text="Note: Racial ability scores are NOT included in these entries and WILL be added when submitted. Racial ability changes:"
                           LineBreakMode="WordWrap"
                           Grid.Row="0"
                           Grid.Column="0"
                           Grid.ColumnSpan="2"/>
                    <Label Text="{Binding RacialASI}"
                           LineBreakMode="WordWrap"
                           Grid.Row="1"
                           Grid.Column="0"
                           Grid.ColumnSpan="2"/>
                    <Label Text="Strength"
                           VerticalOptions="Center"
                           HorizontalOptions="End"
                           Grid.Row="2"
                           Grid.Column="0"/>
                    <Entry Placeholder="Strength Score"
                           Text="{Binding ManualStr}"
                           Keyboard="Numeric"
                           Grid.Row="2"
                           Grid.Column="1"/>
                    <Label Text="Dexterity"
                           VerticalOptions="Center"
                           HorizontalOptions="End"
                           Grid.Row="3"
                           Grid.Column="0"/>
                    <Entry Placeholder="Dexterity Score"
                           Text="{Binding ManualDex}"
                           Keyboard="Numeric"
                           Grid.Row="3"
                           Grid.Column="1"/>
                    <Label Text="Constitution"
                           VerticalOptions="Center"
                           HorizontalOptions="End"
                           Grid.Row="4"
                           Grid.Column="0"/>
                    <Entry Placeholder="Constitution Score"
                           Text="{Binding ManualCon}"
                           Keyboard="Numeric"
                           Grid.Row="4"
                           Grid.Column="1"/>
                    <Label Text="Intelligence"
                           VerticalOptions="Center"
                           HorizontalOptions="End"
                           Grid.Row="5"
                           Grid.Column="0"/>
                    <Entry Placeholder="Intelligence Score"
                           Text="{Binding ManualInt}"
                           Keyboard="Numeric"
                           Grid.Row="5"
                           Grid.Column="1"/>
                    <Label Text="Wisdom"
                           VerticalOptions="Center"
                           HorizontalOptions="End"
                           Grid.Row="6"
                           Grid.Column="0"/>
                    <Entry Placeholder="Wisdom Score"
                           Text="{Binding ManualWis}"
                           Keyboard="Numeric"
                           Grid.Row="6"
                           Grid.Column="1"/>
                    <Label Text="Charisma"
                           VerticalOptions="Center"
                           HorizontalOptions="End"
                           Grid.Row="7"
                           Grid.Column="0"/>
                    <Entry Placeholder="Charisma Score"
                           Text="{Binding ManualCha}"
                           Keyboard="Numeric"
                           Grid.Row="7"
                           Grid.Column="1"/>
                </Grid>
            </Frame>
            <!--Footer-->
            <Button Text="Back"
                    VerticalOptions="End"
                    Grid.Row="2"
                    Grid.Column="0"
                    Grid.ColumnSpan="2"
                    Command="{Binding Page6Back}"/>
            <Button Text="Next"
                    VerticalOptions="End"
                    Grid.Row="2"
                    Grid.Column="2"
                    Grid.ColumnSpan="2"
                    Command="{Binding Page6Next}"/>
        </Grid>
    </p:PopupPage.Content>
</p:PopupPage>